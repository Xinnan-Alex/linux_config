#change display settings
bindsym CTRL+1 exec xrandr --output HDMI-A-0 --primary --auto --left-of eDP, reload
bindsym CTRL+2 exec xrandr --output eDP --primary --left-of HDMI-A-0, reload
bindsym CTRL+3 exec xrandr --output HDMI-A-0 --off,reload
bindsym CTRL+4 exec python ~/.config/i3/move_workspace.py

bindsym $mod+Ctrl+Right move workspace to output right
bindsym $mod+Ctrl+Left move workspace to output left

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m "$mode_system"

